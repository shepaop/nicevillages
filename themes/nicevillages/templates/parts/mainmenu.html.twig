{% if page.mainmenu %}
  <div class="main-menu">
    <div class="main-menu--overlay"></div>
    <div class="main-menu--panel">
      <div class="main-menu--header">
        <div class="site-branding small">
          <span class="site-branding--name">{{ 'Nice Villages'|t }}</span>
          <span class="site-branding--baseline">{{ 'Explore villages that are worth seeing'|t }}</span>
        </div>
      </div>
      <nav role="navigation" class="main-menu--content">
        <div class="main-menu--search">
          {{ page.mainmenu_search }}
        </div>
        <ul class="main-menu--menu">
          <li>
            <span>{{ 'Villages by country'|t }}</span>
            <div class="menu-simple inlined">
              {{ page.mainmenu }}
            </div>
          </li>
          <li>
            <span>{{ 'Villages by label'|t }}</span>
            <div class="menu-simple inlined">
              {{ page.mainmenu2 }}
            </div>
          </li>
        </ul>
        <div class="main-menu--menu">
          {{ page.mainmenu3 }}
        </div>
      </nav>
      <div class="main-menu--footer">
        <ul class="menu-social">
          <li class="facebook">
            <a rel="nofollow" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A//www.nice-villages.com{{ path('<current>')|url_encode }}">
              {{ 'Facebook'|t }}
            </a>
          </li>
          <li class="twitter">
            <a rel="nofollow" target="_blank" href="https://twitter.com/home?status=https%3A//www.nice-villages.com{{ path('<current>')|url_encode }}">
              {{ 'Twitter'|t }}
            </a>
          </li>
          <li class="pinterest">
            <a rel="nofollow" target="_blank" href="https://pinterest.com/pin/create/button/?url=&media=https%3A//www.nice-villages.com{{ path('<current>')|url_encode }}&description=">
              {{ 'Pinterest'|t }}
            </a>
          </li>
          <li class="googleplus">
            <a rel="nofollow" target="_blank" href="https://plus.google.com/share?url=https%3A//www.nice-villages.com{{ path('<current>')|url_encode }}">
              {{ 'Google plus'|t }}
            </a>
          </li>
        </ul>
        {{ page.mainmenu_footer }}
      </div>
    </div>
  </div>
{% endif %}